<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hepiplant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".configuration.Configuration"
        android:allowBackup="true"
        android:icon="@mipmap/hepi_plant_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="Instantiatable">
        <activity android:name=".EventEditActivity"></activity>
        <activity android:name=".EventViewActivity" />
        <activity android:name=".ArchiveActivity" />
        <activity
            android:name=".PopUpArchive"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".MainTabsActivity" />
        <activity
            android:name=".PopUpDelete"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".PopUpDeletePost"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".PopUpDeleteComment"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".PopUpDeleteSalesOffer"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".PlantEditActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".PlantViewActivity" />
        <activity android:name=".CalendarActivity" />
        <activity
            android:name=".PostActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SalesOfferActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ForumTabsActivity"
            android:exported="true" />
        <activity
            android:name=".PlantsListActivity"
            android:exported="true" />
        <activity android:name=".FireBase" />
        <activity
            android:name=".PlantAddActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".UserActivity" />
        <activity android:name=".UserUpdateActivity" />
        <activity
            android:name=".PostAddActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".QuestionActivity" />
        <activity
            android:name=".SalesOfferAddActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".PostEditActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SalesOfferEditActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
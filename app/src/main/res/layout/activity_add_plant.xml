<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlant">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"></include>

    <include layout="@layout/bottom_bar"></include>

    <ImageButton
        android:id="@+id/addImageBut"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/addimagebutton"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dodaj"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/Dodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cantata_one"
        android:text="Dodaj nową roślinę"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Nazwa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="32dp"
                android:fontFamily="@font/cantata_one"
                android:text="Nazwa"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <EditText
                android:id="@+id/editNazwa"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:fontFamily="@font/cantata_one"

                android:inputType="textEmailAddress"
                android:textColor="#AAA1A1" />

            <TextView
                android:id="@+id/Gatunek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cantata_one"
                android:text="Gatunek"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/editGatunek"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_spinner"

                android:fontFamily="@font/cantata_one"

                />

            <TextView
                android:id="@+id/Kategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cantata_one"
                android:text="Kategoria"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/editKategoria"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_spinner"
                android:ems="10"
                android:fontFamily="@font/cantata_one"

                android:textColor="#AAA1A1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Podlewanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cantata_one"
                android:onClick="dodajRoslineDoBazy"
                android:text="Częstość podlewania"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editPodlewanie"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"

                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:fontFamily="@font/cantata_one"
                android:text="..."
                android:textColor="#AAA1A1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Pomieszczenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cantata_one"
                android:text="Pomieszczenie"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editPomieszczenie"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"

                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:fontFamily="@font/cantata_one"

                android:text="..."
                android:textColor="#AAA1A1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/DataZakupu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/cantata_one"
                android:text="Data zakupu"
                android:textSize="24sp" />

            <Button
                android:id="@+id/editData"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"

                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:drawableRight="@drawable/calendar"
                android:ems="10"
                android:fontFamily="@font/cantata_one"

                android:gravity="start"
                android:text="..."
                android:textAlignment="viewStart"
                android:textColor="#AAA1A1"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonDodajRosline"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/cantata_one"
        android:text="Dodaj"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:elevation="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />
</androidx.constraintlayout.widget.ConstraintLayout>
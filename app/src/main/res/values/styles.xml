<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <!-- Fonts -->
    <style name="ListItemTitleFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
    </style>
    <style name="ListItemDescriptionFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
    </style>
    <style name="ForumDateFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="ForumUsernameFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ForumPriceFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <style name="PageTitleFont" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- być może do zmiany czcionka -->
        <item name="android:fontFamily">@font/cantata_one</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
    </style>

    <style name="DetailsFontTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsFontValue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="PopUpTextFont" parent="ForumPriceFont">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonUniversal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/cantata_one</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="ButtonSmallGreen" parent="ButtonUniversal">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">@dimen/button_small_width</item>
        <item name="android:layout_height">@dimen/button_small_height</item>
    </style>
    <style name="ButtonSmallWhite" parent="ButtonSmallGreen">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>
    <style name="ButtonSmallAdmin" parent="ButtonSmallWhite">
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <!-- Other -->

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape  >

            <solid android:color="#FFFFFF" />

            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"

                />
            <corners
                android:radius="10dp"
                />
            <padding
                android:bottom="7dip"
                android:left="7dip"
                android:right="7dip"
                android:top="7dip" />
            <gradient
                android:startColor="@color/colorPrimaryLight"
                android:endColor="@color/colorPrimaryLight"
                />

        </shape>
    </item>
    <item android:drawable="@drawable/aparat"
        android:gravity="center"
        android:height="70dp"
        android:width="70dp"

        ></item>
    <item android:drawable="@drawable/plus"
        android:gravity="top|right"
        android:height="20dp"
        android:width="20dp"
        android:top="5dp"
        android:right="5dp"
        >

    </item>
</layer-list>